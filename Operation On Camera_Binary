#include "stdafx.h"
#include<opencv2/opencv.hpp>
#include<iostream>

using namespace std;
using namespace cv;

Mat frame;
Mat grayImage;
Mat binary;
int Threshold = 0;

void on_Trackbar(int, void*)
{
	cout << "Threshold value: " << endl;
	cout << "Threshold = " << Threshold << endl;
}

int main()
{
	VideoCapture capture(0);
//
//	if (!capture.isOpened())
//	{
//		cout << "Error" << endl;
//	}
//	else
//	{
//		cout << "OK" << endl;
//	}
//	namedWindow("1");
	while(true)
	{
		capture >> frame;
		if (frame.empty())
			break;
		cvtColor(frame, grayImage, CV_BGR2GRAY);

		threshold(grayImage, binary, Threshold, 255, CV_THRESH_BINARY);
		namedWindow("Binary");
		createTrackbar("Threshold", "Binary", &Threshold, 255, on_Trackbar);
		imshow("Binary", binary);
		if (waitKey(30) >= 0)
			break;
		
	}
	capture.release();
	frame.release();
	binary.release();
	rev.release();
	cv::destroyAllWindows;
    return 0;
}
